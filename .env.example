# ====================================
# ARGUS SECURITY SYSTEM - AI MODULES
# Configuration Environment Variables
# ====================================

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (if using PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/argus_db

# ====================================
# AI & MACHINE LEARNING APIs
# ====================================

# OpenAI GPT-4 for Narrative Reports
OPENAI_API_KEY=sk-your-openai-api-key-here

# ====================================
# MULTI-CHANNEL NOTIFICATIONS
# ====================================

# Twilio (SMS & Voice Calls) - https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_STATUS_CALLBACK_URL=https://your-domain.com/notifications/sms/webhook/

# SendGrid (Email) - https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEFAULT_FROM_EMAIL=noreply@argus-security.com

# Firebase (Push Notifications) - https://console.firebase.google.com/
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-adminsdk-credentials.json

# Application URLs
DASHBOARD_URL=https://your-domain.com/analytics/
BASE_URL=https://your-domain.com

# ====================================
# CELERY & REDIS (Background Tasks)
# ====================================

# Redis for Celery broker
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ====================================
# ANALYTICS CONFIGURATION
# ====================================

# Anomaly detection sensitivity (0.05 - 0.2)
ANOMALY_CONTAMINATION=0.1

# Default prediction periods (days)
DEFAULT_FORECAST_PERIODS=7

# ====================================
# NOTIFICATION PREFERENCES
# ====================================

# Maximum notifications per hour (0 = unlimited)
MAX_NOTIFICATIONS_PER_HOUR=10

# Quiet hours (24h format)
QUIET_HOURS_START=22:00
QUIET_HOURS_END=08:00

# Notification aggregation window (minutes)
AGGREGATION_WINDOW_MINUTES=30

# ====================================
# SECURITY SETTINGS
# ====================================

# Suspicious object keywords (comma-separated)
SUSPICIOUS_OBJECTS=gun,weapon,knife,fire,scissors,crowbar

# High-risk object keywords (comma-separated)
HIGH_RISK_OBJECTS=gun,weapon,fire

# ====================================
# OPTIONAL: spaCy NLP Model
# ====================================

# Download model with: python -m spacy download en_core_web_sm
SPACY_MODEL=en_core_web_sm

# ====================================
# LOGGING
# ====================================

LOG_LEVEL=INFO
LOG_FILE=/var/log/argus/argus.log
